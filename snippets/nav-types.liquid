{% if collection.all_types.size != 0 %}
<div class="nav-types-holder">
  <ul class="nav-types text-align-center padding-top-basic padding-bottom-small" data-collection="{{ collection.handle }}">
    {% for product_type in collection.all_types %}
    <li class="u-inline-block"><a href="{{ collection.url }}/{{ product_type | handle }}">{{ product_type }}</a></li>
    {% endfor %}
  </ul>
</div>
{% endif %}
