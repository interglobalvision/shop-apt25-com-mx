<div id="product-holder">
  <div class="container">
    <section id="product-header">
      <div class="grid-row">
        <div class="grid-item item-s-6 grid-column">
          <h2 class="u-inline-block">{{ product.title }}</h2>
          <div class="font-mid font-bold">{{ product.vendor }}</div>
          <div>{{ product.price | money_without_trailing_zeros }}</div>
        </div>
        <div class="grid-item item-s-6">
          <form action="/cart/add" method="post" enctype="multipart/form-data" id="product-form"  class="grid-column">
            {% if product.options.size == 1 and product.variants[0].title == 'Default Title' %}
              <input type="hidden" name="id" value="{{ product.variants.first.id }}" />
            {% else %}
              <select id="product-select" name="id">
              {% for variant in product.variants %}
                {% if variant.available == true %}
                <option value="{{variant.id}}"> {{ variant.title }}</option>
                {% else %}
                <option disabled="disabled"> {{ variant.title }} - sold out!</option>
                {% endif %}
              {% endfor %}
              </select>
            {% endif %}

            <div id="product-add-holder" class="font-size-basic">
              <input type="submit" name="add" id="add" value="Add to Cart" class="button">
              <div id="product-unavailable" class="font-size-small">Out of stock</div>
            </div>
          </form>
        </div>
      </div>
      <div class="grid-row">
        <div class="grid-item item-s-12">
          {{ product.description }}
        </div>
      </div>
    </section>

    {% if product.images.size > 1 %}
    <section id="product-gallery">
      <div id="product-gallery-row" class="grid-row">
        {% for image in product.images %}
          {% unless image == product.featured_image %}
          <div class="product-gallery-item grid-item no-gutter item-s-12">
            <img class="product-gallery-image" src="{{ image.src | img_url: 'grande' }}" alt="{{ image.alt | escape }}">
          </div>
          {% endunless %}
        {% endfor %}
      </div>
    </section>
    {% endif %}
  </div>
</div>

{% include 'related-products' %}
