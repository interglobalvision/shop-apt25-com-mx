<section id="cart">
  <div class="container">
    {% if cart.item_count > 0 %}
    <form action="/cart" method="post" id="cart" class="cart">

      <div class="grid-row">
        {% for item in cart.items %}
        <div id="cart-item-{{item.variant.id}}" class="cart-item grid-item item-s-12 no-gutter grid-row align-items-end margin-bottom-small">
          <div class="grid-item item-s-2 item-m-3 offset-m-0 item-l-2 offset-l-1">
            <a href="{{ item.product.url }}">
              {% if item.variant.image != blank %}
                <img src="{{ item.variant.image | img_url: '300x300' }}" alt="{{ item.title | escape }}" />
              {% else %}
                <img src="{{ item.image | img_url: '300x300' }}" alt="{{ item.title | escape }}" />
              {% endif %}
            </a>
          </div>
          <div class="grid-item item-s-7 item-m-6">
            <div class="item remove"><a href="/cart/change/{{item.variant.id}}?quantity=0">X</a></div>
            <div class="item title"><a href="{{ item.product.url }}">{{ item.title }}</a></div>
            <div>
              <input type="text" size="4" pattern="[0-9]*" name="updates[{{item.variant.id}}]" id="quantity-{{ item.variant.id }}" class="quantity" value="{{ item.quantity }}" min="1" onfocus="this.select();"/>
              X
              {{ item.price | money }}
            </div>
          </div>
          <div class="grid-item item-s-3 item-m-3 item-l-2 text-align-right font-bold price">{{ item.line_price | money }}</div>
        </div>
        {% endfor %}
      </div>

      <div class="grid-row margin-bottom-small">
        <div class="grid-item item-s-4 offset-s-2 item-m-6 offset-m-3 item-l-6 offset-l-3">
          <input class="button" type="submit" id="update-cart" name="update" value="Update"  />
        </div>
        <div class="grid-item item-s-6 item-m-3 item-l-2 text-align-right font-bold">Subtotal: {{ cart.total_price | money }}</div>
      </div>

      <div class="grid-row">
        <div class="grid-item item-s-12 item-m-6 offset-m-6 item-l-2 offset-l-9 text-align-right">
          <input class="button" type="submit" name="checkout" value="Checkout" />
        </div>
      </div>

    </form>
    {% else %}
    <p>Your cart is empty!</p>
    {% endif %}
  </div>
</section>
