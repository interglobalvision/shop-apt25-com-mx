$header-height = 92px
$border-style = 2px solid $color-black
$transition-duration = 200ms

.container
  max-width: 1840px

#main-content
  min-height: calc('100vh - ' + $header-height)

// ******************************************************

// HEADER

#admin_bar_iframe
  display: none

#header
  padding-bottom: $margin-tiny
  .logo
    height: 70px

#main-nav
  display: none

.mobile-nav-toggle-holder
  position: fixed
  z-index: 800

#mobile-nav
  position: fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  background: white
  z-index: 900
  padding-top: 102px
  opacity: 0
  transition: opacity $transition-duration ease-in-out
  pointer-events: none
  &.show
    opacity: 1
    pointer-events: auto

  .mobile-nav-toggle-holder
    position: absolute

.mobile-nav-toggle-holder
  top: 0
  left: 0
  width: 100%

#collection-filters
  white-space: nowrap

.margin-bottom-section
  margin-bottom: $margin-basic

@media screen and (orientation: landscape)
  .margin-bottom-section
    margin-bottom: $margin-mid

.nav-cart-link
  position: relative

.nav-cart-count-holder
  position: absolute
  border: $border-style
  background-color: $color-white
  bottom: -.8em
  margin-left: 2em
  width: 1.7em
  height: 1.7em
  border-radius: 1.7em
  text-align: center
  z-index: 100
  animation: spinZ .5s 1 linear
  .nav-cart-count-text
    width: auto
    height: auto
    margin-top: .3em

.nav-item-holder
  position: relative
  display: inline-block
  &:hover
    .nav-item-border
      animation: spinX .5s infinite linear
    .nav-cart-count-holder
      animation: spinZ .5s infinite linear

  a
    display: block

.nav-item-border
  position: absolute
  stroke-width: 2px
  stroke: $color-black
  width: 100%
  height: 5px
  fill: none
  pointer-events: none

.nav-types-item
  margin-bottom: 4px

// ******************************************************

// ARTICLE

.icon
  height: 20px

@media screen and (orientation: landscape)
 .collection-product-item
   flex-basis: calc(100% / 3)
   max-width: calc(100% / 3)

@media screen and (orientation: portrait)
 .collection-product-item
   flex-basis: 50%
   max-width: 50%

// ******************************************************

// INDEX

#feed-banner
  position: relative
  overflow: hidden
  .container, .grid-row
    height: 100%
    min-height: 20vw

#feed-banner-title
  margin-bottom: $margin-small

#feed-banner-bg
  position: absolute
  min-width: 100%
  top: 0
  left: 0
  bottom: 0
  right: 0
  margin: auto

.feed-products-wrapper
  margin-bottom: $margin-basic

.feed-article-holder
  .feed-article-item:not(:last-child)
    margin-bottom: $margin-basic

.feed-lookbook-holder
  position: relative
  font-size: 0

.feed-lookbook-title
  position: absolute
  width: calc('100% - ' + $margin-basic)
  height: 100%
  color: white
  top: 0
  left: ($margin-basic / 2)

.feed-article-image-holder,
.feed-article-text,
.feed-life-item
  flex-basis: 100%
  max-width: 100%

.feed-life-item:not(:last-of-type)
  margin-bottom: $margin-basic

.feed-article-text
  order: 1

@media screen and (orientation: landscape)
  .feed-article-image-holder
    flex-basis: 41.666666%
    max-width: 41.666666%

  .feed-article-text
    flex-basis: 58.333333%
    max-width: 58.333333%
    order: 0

  .feed-life-item
    flex-basis: 33.333333%
    max-width: 33.333333%

  .feed-life-item:not(:last-of-type)
    margin-bottom: 0

  .grid-item.feed-article-text
    padding-right: 0

// ******************************************************

// BLOG

.blog-icon
  max-height: 1em
  max-width: 1em
  &.pin
    margin-bottom: -.2em

// ******************************************************

// PRODUCT

#product-gallery-holder
  order: 1

#product-gallery
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: center

.form-element
  appearance: none
  text-align: center
  text-align-last: center
  border: $border-style
  padding: ($margin-micro / 2) 0
  border-radius: 0
  background-color: $color-white
  box-sizing: content-box
  &.button
    cursor: pointer

select.form-element
  background-image: url('icon-select.svg')
  background-size: 12px
  background-position: 95% center
  background-repeat: no-repeat

.zoom-container
  position: fixed
  z-index: 1000
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  pointer-events: none
  opacity: 0
  transition: opacity $transition-duration
  &.show
    opacity: 1
    cursor: zoom-in
    pointer-events: all

.product-gallery-item
  text-align: center

.product-gallery-image-holder
  display: inline-block
  &.fixed
    position: fixed
    z-index: 1000
    top: 0
    width: 70vw
    height: 100vh

.product-gallery-image
  opacity: 1
  transition: opacity $transition-duration
  &.hide
    opacity: 0

.related-products-item
  font-size: 0

// ******************************************************

// FOOTER

#footer
  border-top: $border-style

#footer-social
  img.social-icon
    height: 1.2em
  .grid-item:not(:last-child)
    img.social-icon
      margin-right: $margin-tiny

#footer-nav
  display: none

// ******************************************************

// CART

.icon-remove
  width: 10px

// ******************************************************

// COLLECTION

.pagination-arrow
  width: 72px
  polyline
    fill: $color-black
  path
    stroke-width: 2px
    stroke: $color-black
    fill: none
